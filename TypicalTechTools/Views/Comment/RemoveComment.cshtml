@model TypicalTechTools.Models.Comment

@{
    ViewData["Title"] = "RemoveComment";
}

<h1>RemoveComment</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        @Html.HiddenFor(c => c.Id)
        @Html.HiddenFor(c => c.Code)
        @Html.HiddenFor(c => c.CreatedDate)
        @Html.HiddenFor(c => c.SessionId)
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>     
    </dl>
    
    <form asp-action="RemoveComment">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>

<div>
    @Html.ActionLink("Back to Comments", "CommentList", "Comment", new { id = Model.Code })
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
